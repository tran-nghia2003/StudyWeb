@model StudyWeb.Models.Comment

@{
    ViewBag.Title = "CommentPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("CommentPosts", "Comments", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div id="project" class="project">
        <div class="container">
            <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
                <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                    <div class="row">
                        <h1 style="color: white; margin-left: 30px">Viết bình luận của bạn</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <textarea id="contentComment" name="contentComment" placeholder="Nhập nội dung bài viết ..." rows="3" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; "></textarea>
                    </div>
                    <div class="row" style="margin-left: 10px">
                        <div class="col-md-6" style=" margin-top: 15px">
                            <h2 style="color:white">Thêm ảnh 1 : <input style="color: white; margin-right: 20px" type='file' name="fileUpload1" /></h2>

                        </div>
                        <div class="col-md-6" style=" margin-top: 15px; text-align:right">
                            <h2 style="color:white">Thêm ảnh 2 : <input style="color: white; margin-right: 20px" type='file' name="fileUpload2" /></h2>

                        </div>
                    </div>
                    <div class="row" style="margin-left: 10px">
                        <div class="col-md-6" style=" margin-top: 15px">
                            <h2 style="color:white">Thêm ảnh 3 : <input style="color: white; margin-right: 20px" type='file' name="fileUpload3" /></h2>

                        </div>
                        <div class="col-md-6" style=" margin-top: 15px; text-align: right">
                            <h2 style="color:white">Thêm ảnh 4 : <input style="color: white; margin-right: 20px" type='file' name="fileUpload4" /></h2>

                        </div>
                    </div>

                </div>
                <div class="card-footer" style="text-align: right; height: 60px">
                    <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Xong</button>
                </div>
            </div>
        </div>
    </div>
}



<style>

    .project {
        background-image: url('../../Content/images/nen_test.jpg');
        min-height: 80vh;
    }

    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
    }

        .card-footer input {
            color: white;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 30px;
            margin-right: 30px;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }

    .copyright {
        margin-top: 0;
    }
</style>





