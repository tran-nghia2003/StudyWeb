@model IEnumerable<StudyWeb.Models.Posts>

@{
    ViewBag.Title = "ListPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="project" class="project">
    <a href="@Url.Action("AddPosts","Posts")">
        <div class="container">
            <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
                <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                    <div class="row">
                        <h1 style="color: white; margin-left: 30px">Đăng bài của bạn tại đây</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <textarea id="contentPosts" name="contentPosts" placeholder="Nhập nội dung bài viết ..." rows="3" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; "></textarea>
                    </div>
                </div>
            </div>
        </div>
    </a>
    
    <br /><br />
    <div class="container">
        @foreach (var item in Model)
        {
            if (item.display == true)
            {
                <div class="card" style="background: rgba(0,0,0,0.5); min-height: 100px;">
                    <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                        <div class="row">
                            <div class="col-md-1">
                                <img style="margin-left: 30px; margin-right: 15px" height="64" width="64" src="/ImagesUser/@item.Account.imageUser" alt="User" />
                            </div>
                            <div class="col-md-8">
                                <h1 style="color: white; margin-left: 20px; margin-top: 10px">@item.Account.fullname</h1>
                            </div>
                            <div class="col-md-3">
                                <h2 style="color: white; margin-top: 13px">@item.datePost</h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="css_card-body">
                            <div class="row" style="border-bottom: solid 2px; border-color: black;">
                                <h1 style="color: white; margin-left: 30px">@item.contentPosts</h1>
                            </div>
                            <br />
                            @if (item.imagePosts1 == null && item.imagePosts2 == null && item.imagePosts3 == null && item.imagePosts4 == null)
                            {

                            }
                            else if (item.imagePosts2 == null && item.imagePosts3 == null && item.imagePosts4 == null)
                            {
                                <div style="min-height: 0px;">
                                    <div style="text-align: center">
                                        <img src="/ImagesPosts/@item.imagePosts1" />
                                    </div>
                                </div>
                            }
                            else if (item.imagePosts3 == null && item.imagePosts4 == null)
                            {
                                <div class="col-md-6" style="text-align: center">
                                    <img src="/ImagesPosts/@item.imagePosts1" />
                                </div>
                                <div class="col-md-6" style="text-align: center">
                                    <img src="/ImagesPosts/@item.imagePosts2" />
                                </div>
                            }
                            else if (item.imagePosts4 == null)
                            {
                                <div class="row" style="min-height: 0px;">
                                    <div class="col-md-6" style="text-align: center">
                                        <img src="/ImagesPosts/@item.imagePosts1" />
                                    </div>
                                    <div class="col-md-6" style="text-align: center">
                                        <img src="/ImagesPosts/@item.imagePosts2" />
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div style="min-height: 0px;">
                                    <div style="text-align: center">
                                        <div style="text-align: center">
                                            <img src="/ImagesPosts/@item.imagePosts3" />
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row " style="min-height: 0px;">
                                    <div class="col-md-6 thumbnail" style="text-align: center">
                                        <img src="/ImagesPosts/@item.imagePosts1" />
                                    </div>
                                    <div class="col-md-6 thumbnail" style="text-align: center">
                                        <img src="/ImagesPosts/@item.imagePosts2" />
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div class="row" style="min-height: 0px;">
                                    <div class="col-md-6 thumbnail" style="text-align: center">
                                        <img src="/ImagesPosts/@item.imagePosts3" />
                                    </div>
                                    <div class="col-md-6 thumbnail" style="text-align: center">
                                        <img src="/ImagesPosts/@item.imagePosts4" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer" style=" background: rgba(0,0,0,0.5); margin-top: 30px; text-align: right">
                        <a href="">
                            <img style="text-align: right" height="24" width="24" src="/Content/images/like.ico" />&nbsp;Thích
                        </a>
                        <a href="@Url.Action("ListComments", "Comments", new { id = item.id})">
                            <img style="text-align: right" height="24" width="24" src="/Content/images/comments.png" />&nbsp;Bình luận
                        </a>
                    </div>
                </div><br /><br />
            }

        }
    </div>
</div>






<style>

    .project {
        background-image: url('../../Content/images/nen_test.jpg');
        min-height: 70vh;
    }
    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }
    .btn_a:hover{
        background: white;
        color: dodgerblue;
    }
    .css_card-body {
        color: white;
    }
    .card-footer{
        height: 50px;
    }
    .card-footer a {
        color: white;
        margin: 10px;
    }
    .card-footer input {
        color: white;
        margin-top: 10px;
        margin-bottom: 10px;
        margin-right: 30px;
        margin-right: 30px;
    }
    .card-footer img:hover{
        height: 32px;
        width: 32px;
    }
    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }
   
    img{
        max-height: 440px;
        max-width: 540px;
    }
</style>