@model IEnumerable<StudyWeb.Models.Video>

@{
    ViewBag.Title = "ListVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="project" class="project">
    <div class="container">
        <div class="card" style="background: rgba(0,0,0,0.5);">
            <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                <div style="text-align: center">
                    <h1 style="color: white; margin-left: 30px">Danh sách video</h1>
                </div>
            </div>
        </div>
        <br />
        <br />
        @foreach (var item in Model)
        {
            if (item.display.Equals(true))
            {
                <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
                    <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                        <div class="row">
                            <div class="col-md-9">
                                <h1 style="color: white; margin-left: 20px; margin-top: 10px">@item.nameVideo</h1>
                            </div>
                            <div class="col-md-3">
                                <h2 style="color: white; margin-top: 13px">@item.dateUpload</h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="css_card-body">
                            <div class="row" style="border-bottom: solid 2px; border-color: black;">
                                <h1 style="color: white; margin-left: 30px">@item.describe</h1>
                            </div>
                            <br />
                            <div style="min-height: 0px;">
                                <div style="text-align: center">
                                    <video controls="controls" height="600" width="850" style="margin:10px;">
                                        <source src="~/Video/@item.linkVideo" type="video/mp4" />
                                    </video>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer" style=" background: rgba(0,0,0,0.5); margin-top: 5px; text-align: right">
                        <a href="">
                            <img style="text-align: right" height="24" width="24" src="/Content/images/like.ico" />&nbsp;Thích
                        </a>
                        <a href="">
                            <img style="text-align: right" height="24" width="24" src="/Content/images/comments.png" />&nbsp;Bình luận
                        </a>
                    </div>
                </div><br /><br />
            }

        }
    </div>
</div>

<style>

    .project {
        background-image: url('../../Content/images/nen_test.jpg');
        min-height: 70vh;
    }

    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
        margin-top: 10px;
    }
    .card-footer a{
        color: white;
        margin: 10px;
    }

        .card-footer input {
            color: white;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 30px;
            margin-right: 30px;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }
</style>