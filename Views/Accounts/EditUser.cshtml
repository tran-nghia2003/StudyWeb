@model StudyWeb.Models.Account

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("EditUser", "Accounts", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div id="project" class="project">
        

        <br /><br />
        <div class="container">
            <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
                <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                    <div class="row">
                        <h1 style="color: white; margin-left: 30px">Thay đổi thông tin tài khoản</h1>
                    </div>
                </div>
                <br />
                <div class="card-body" style="text-align: center">
                    <img height="120" width="120" src="~/ImagesUser/@Model.imageUser" alt="user" />
                    <br />
                    <br />
                    <br />
                    <div class="row" style="margin-left: 10px">
                        <div class="col-md-5" style=" margin-top: 15px; text-align: left">
                            <div class="row">
                                <div class="col-md-6" style="text-align: right">
                                    <h2 style="color:white">Tên người dùng:</h2>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.fullname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.fullname, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style=" margin-top: 15px; text-align:left">
                            <div class="row">
                                <div class="col-md-6" style="text-align: right">
                                    <h2 style="color:white">Ảnh đại diện: </h2>
                                </div>
                                <div class="col-md-6">
                                    <div style="display: none">
                                        @Html.EditorFor(model => model.imageUser, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.imageUser, "", new { @class = "text-danger" })
                                    </div>
                                    <input style="color: white; margin-right: 20px" type='file' name="fileUpload" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-left: 10px">
                        <div class="col-md-5" style=" margin-top: 15px; text-align: left">
                            <div class="row">
                                <div class="col-md-6" style="text-align: right">
                                    <h2 style="color:white">Địa chỉ mail: </h2>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.maill, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.maill, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style=" margin-top: 15px; text-align:left">
                            <div class="row">
                                <div class="col-md-6" style="text-align: right">
                                    <h2 style="color:white">Số điện thoại :</h2>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-left: 10px; display: none">
                        <div class="col-md-5" style=" margin-top: 15px; text-align: left">
                            <div class="row">
                                <div class="col-md-6" style="text-align: right">
                                    <h2 style="color:white"></h2>
                                </div>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>   
                    </div>     
                </div>
                <div class="card-footer" style="text-align: right; height: 60px">
                    <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Lưu</button>
                </div>
            </div>
        </div>
    </div>




}






<style>

    .project {
        padding-top: 30px;
        background-image: url('../../Content/images/backgoundUser.jpg');
        min-height: 100vh;
    }

    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
    }

        .card-footer input {
            color: white;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 30px;
            margin-right: 30px;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }

    .copyright {
        margin-top: 0;
    }
</style>






















