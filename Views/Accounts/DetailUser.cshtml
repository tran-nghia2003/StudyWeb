@model StudyWeb.Models.Account

@{
    ViewBag.Title = "DetailUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="project" class="project">
    <div class="row" style="min-height: 170px">
        <div class="col-md-6">
            @*<div style="margin-left: 40px;">
                <p style="color: black; font-size: 20px">Trang chủ / Tài khoản</p><br />
                <a href="@Url.Action("Index", "Home")" class="add_posts">
                    <h4 style="color: black"><img height="24" width="24" src="~/Content/images/back.png" /> Quay lại</h4>
                </a>
                </div>*@
            <div class="row set_button" style="margin-left: 30px; padding: 10px; width: 210px; background-color: white">
                <button class="text-uppercase" id="btn1" onclick="btn1()" style="color: rgb(0,178,228); font-weight: bold; display: block; background: none">
                    Hoạt động gần đây &nbsp;
                    <img height="16" width="16" src="~/Content/images/down-chevron.png" />
                </button>
                <button class="text-uppercase" id="btn2" onclick="btn2()" style="color: rgb(0,178,228); font-weight: bold; display: none; background: none">
                    Hoạt động gần đây &nbsp;
                    <img height="16" width="16" src="~/Content/images/up-chevron.png" />
                </button>
            </div>
            <div id="content" style="display: none; background-color: white; height: 120px; width: 210px; margin-left: 30px; border: solid 1px white">
                <p class="set_hover" style="margin-top: 5px; padding: 5px; padding-left: 15px;">
                    <a href="@Url.Action("PostsOfUser","Posts", new { id = Model.id})" style="color: rgb(0,178,228)">
                        Bài viết gần đây
                    </a>
                </p>
                <p class="set_hover" style="margin-top: 5px; padding: 5px; padding-left: 15px;">
                    <a href="@Url.Action("CommentOfUser","Comments", new { id = Model.id})" style="color: rgb(0,178,228) ">
                        Bình luận gần đây
                    </a>
                </p>
                <p class="set_hover" style="margin-top: 5px; padding: 5px; padding-left: 15px">
                    <a href="@Url.Action("ScoreUser","Scores", new { id = Model.id})" style="color: rgb(0,178,228) ">
                        Điểm bài kiểm tra
                    </a>
                </p>

            </div>
        </div>
        <div class="col-md-6" style="text-align: right">
            <div style="margin-right: 40px;">
                <a href="@Url.Action("Logout", "Accounts")" class="add_posts">
                    <h2 class="" style="color: red; font-weight: bold">Đăng xuất <img height="32" width="32" src="~/Content/images/logout.png" /></h2>
                </a>
            </div>
        </div>
        <div class="col-md-6"></div>
        <div class="col-md-6" style="text-align: right">

        </div>
    </div>

    <div class="container">
        <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
            <div class="card-header" style="background: rgba(0,0,0,0.5); height: 67px ; z-index: 1">
                <div class="row">
                    <div class="col-md-6">
                        <h1 style="color: white; margin-left: 30px">Thông tin tài khoản</h1>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
            </div>
            <div class="card-body" style="text-align: center; z-index: 1">

                <img height="120" width="120" src="~/ImagesUser/@Model.imageUser" alt="user" />

                <script language="javascript">
                    function btn1() {
                        document.getElementById("content").style.display = 'block';
                        document.getElementById("btn1").style.display = 'none';
                        document.getElementById("btn2").style.display = 'block';
                    }
                    function btn2() {
                        document.getElementById("content").style.display = 'none';
                        document.getElementById("btn2").style.display = 'none';
                        document.getElementById("btn1").style.display = 'block';
                    }
                </script>
                <br />
                <br />
                <br />
                <div class="row" style="margin-left: 10px">
                    <div class="col-md-6" style=" margin-top: 15px; text-align: left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h2 style="color:white">Tên người dùng :</h2>
                            </div>
                            <div class="col-md-6">
                                <h2 style="color:white">@Model.fullname</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" style=" margin-top: 15px; text-align:left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h2 style="color:white">Loại tài khoản : </h2>
                            </div>
                            <div class="col-md-6">
                                <h2 style="color:white">@Model.TypeAccount.typeName</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-left: 10px">
                    <div class="col-md-6" style=" margin-top: 15px; text-align: left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h2 style="color:white">Địa chỉ mail : </h2>
                            </div>
                            <div class="col-md-6">
                                <h2 style="color:white">@Model.maill</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6" style=" margin-top: 15px; text-align: left">
                        <div class="row">
                            <div class="col-md-6" style="text-align: right">
                                <h2 style="color:white">Số điện thoại : </h2>
                            </div>
                            <div class="col-md-6">
                                <h2 style="color:white">@Model.phone</h2>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer" style="text-align: right; height: 60px">
                @if (Model.TypeAccount.typeName == "Admin")
                {
                    <a class="btn-success" style="margin-top: 14px;padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black" href="@Url.Action("Index","Admin")">Trang quản trị</a>
                }
                <a class="btn-success" style="margin-top: 14px;padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black" href="@Url.Action("EditUser","Accounts", new { id = Model.id})">Sửa thông tin</a>
            </div>
        </div>
    </div><br /><br /><br /><br /><br /><br /><br />
</div>




<style>
    .set_button:hover {
        background-color: white;
        border: solid 1px rgb(0,178,228);
    }
    .set_hover:hover {
        background-color: none;
        border: solid 1px rgb(0,178,228);
        font-size: 17px;
    }
    .project {
        padding-bottom: 0px;
        padding-top: 30px;
        background-image: url('../../Content/images/backgoundUser.jpg');
        min-height: 100vh;
    }
    .btn_a {
        color: white;
        padding: 5px;
        padding-left: 10px;
        padding-right: 10px;
        background-color: rgba(0,0,0,0.5);
        border-radius: 8px;
        margin-right: 20px
    }

        .btn_a:hover {
            background: white;
            color: dodgerblue;
        }

    .css_card-body {
        color: white;
    }

    .card-footer {
        height: 50px;
    }

        .card-footer input {
            color: white;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-right: 30px;
            margin-right: 30px;
        }

        .card-footer img:hover {
            height: 32px;
            width: 32px;
        }

    add_posts:hover {
        background-color: forestgreen;
        color: white;
    }

    img {
        max-height: 440px;
        max-width: 540px;
    }

    .copyright {
        margin-top: 0;
    }
</style>
